<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/iv_foto_barang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#CCCCCC"
            android:scaleType="centerCrop"
            android:contentDescription="Foto Barang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toEndOf="@id/iv_foto_barang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_nama_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang Placeholder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_lokasi_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi Terakhir: xxx"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_waktu_lalu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x hari yang lalu"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>